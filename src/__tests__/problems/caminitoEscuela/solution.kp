iniciar-programa
	define turn(n) como
	inicio
		repetir (n) veces 
			gira-izquierda;		
	fin;
	
	define right como
	inicio
		turn(3);
	fin;

	define-instruccion-entera abs(n) como
	inicio
		si (0 <= n) entonces 
			regresa n;
		si (n <= precede(0, 10)) entonces
		inicio
			regresa sucede(abs(sucede(n, 10)), 10);
		fin;
		regresa sucede(abs(sucede(n)));
	fin;
	define school(x, yy) como 
	inicio
		si (junto-a-zumbador) entonces
		inicio
			coge-zumbador;
			repetir(abs(x)) veces deja-zumbador;
			apagate;
		fin;
		right;
		mientras (frente-bloqueado) hacer gira-izquierda;
		avanza;
		si (orientado-al-norte) entonces
		inicio
			school(x, sucede(yy));
		fin
		sino si (orientado-al-sur) entonces
		inicio
			school(x, precede(yy));
		fin
		sino si (orientado-al-oeste) entonces
		inicio
			school(precede(x), yy);
		fin
		sino 
		inicio
			school(sucede(x), yy);
		fin;
		
	fin;
	inicia-ejecucion
		school(0,0);
		apagate;
	termina-ejecucion
finalizar-programa